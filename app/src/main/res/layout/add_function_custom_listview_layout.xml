<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp" android:padding="10dp">

    <EditText
        android:id="@+id/parameterInfo"
        android:layout_width="196dp"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeStepGranularity="1sp"
        android:hint="Parameter Name"/>

    <Spinner
        android:id="@+id/parameterType"
        android:layout_width="185dp"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/parameterInfo"
        android:layout_alignParentRight="true"
        android:text="+"
        android:gravity="center"
        android:entries="@array/parameterTypes"
        android:textSize="20sp"/>


</RelativeLayout>